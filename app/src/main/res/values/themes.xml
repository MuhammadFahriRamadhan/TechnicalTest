<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TechnicalTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="DefaultTextInter">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/grayDark1</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/greyLight5</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MainEditText">
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/grayDark1</item>
        <item name="android:textColorHint">@color/grayDark4</item>
    </style>


    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blueDarker</item>
        <item name="android:minHeight">@dimen/_38sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="cornerRadius">6dp</item>
    </style>


    <style name="TextInter400" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextInter500" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextInter600" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextInter700" parent="DefaultTextInter">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

</resources>